<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Statistics for {{name}}</title>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery-1.11.3.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/stats.css">
</head>
<body>
    <div id="container-fluid" class="nav navbar-default">
        <header class="container-fluid">
            <figure>
                <a href="/"><img id="smallLogo" src="/img/logo-small.png" alt="Nema Logo"></a>
            </figure>
            <nav class="nav navbar-right">
                <ul class="nav navbar-nav col-md-12">
                    <li><a href="/signin">Sign in</a></li>
                    <li><a href="/signup">Sign up</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/contact">Contact Us</a></li>
                </ul>
            </nav>
        </header>
    </div>
    <hr>
    <a href="/user/{{username}}"><h5>Back to Profile Page</h5></a>
    <section>
        <h3>{{name}}</h3>
        <h3>{{message}}</h3>
        <div class="container">
            <h4>{{title}}</h4>
            <div class="row">
                {{#each percentages}}
                <div class="col-md-4">
                    <h5>{{name}}</h5>
                    {{#each percentages}}
                        <div id="perc">
                            <span id="percTitle">{{title}}</span>: <span id="percValue">{{percentage}}</span>
                        </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
            
        </div>
        
    </section>
    <div class="container-fluid">
        <footer>
            Nema &copy; 2017
        </footer>
    </div>
</body>