<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{name}}'s Profile Page</title>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery-1.11.3.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/organisation.css">
</head>
<body>
    <div class="container-fluid">
        <div class="col-md-2" id="sidebar">
            <img src="/{{thumbnail}}" id="thumbnailPic" alt="{{name}}'s thumbnail Photo">
            <figcaption>{{name}}</figcaption>
            <section>
                <div id="followBtn">
                    {{{followBtn}}}
                </div>
                <br>
                Followers: <span id="foll">{{followersNo}}</span><br><br>
                <a href="/statistics/{{username}}">View Statistics</a><br><br>
                <div id="info">
                    Location: {{location}} <br><br>
                    Email Address: {{email}} <br><br>
                    Phone Number: {{phNo}} <br><br>
                </div>
            </section>
        </div>
        <div class="col-md-6" id="centerRow">
            <h4>Bio</h4>
            <div id="previous">
                {{bio}}
            </div>
            <h4>Notifications</h4>
            {{#each data}}
            <div id="previous">
                <h5>{{date}}, {{time}}</h5>
                {{text}}
            </div>
            {{/each}}
        </div>
        <div class="col-md-4" id="rightBar">
            <h4>Reviews</h4>
            <div id="newReview">
                <div id="revError">
                    {{{reviewErr}}}
                </div>
                <form action="/review/{{username}}" onsubmit="return validate();" method="post">
                    <textarea name="review" id="reviewSub"></textarea>
                    <div id="btnDiv">
                        <button type="submit" id="reviewBtn" class="btn btn-default">Post Review</button>
                    </div>
                </form>
            </div>
            <div id="reviews">
                <h6>{{noReviews}}</h6>
                {{#each reviews}}
                <div id="review">
                    <h5>{{name}}</h5>
                    <h6>{{date}}&nbsp;{{time}}</h6>
                    {{review}}
                </div>
                {{/each}}
            </div>
            
        </div>
    </div>
    <footer class="panel-footer col-md-12 col-sm-12">
        <div class="row">
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/signup">Sign Up</a></li>
                    <li><a href="/signin">Sign In</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/contact">Contact Us</a></li>
                    <li><a href="/organisation">Organisations</a></li>
                    <li><a href="/tos">Terms&nbsp;of&nbsp;Service</a></li>
                    <li><a href="/privacy-policy">Privacy Policy</a></li>
                </ul>
            </nav>
        </div>
        <div class="row">
            Nema &copy; 2017
        </div>
    </footer>
    <script>
        var reviewText = document.getElementById('reviewSub');
        var canReview = {{canReview}};
        if(canReview !== true){
            reviewText.setAttribute('disabled', 'disabled');
        }
        var wsp = /^\s*$/;
        function validate(){
            if(wsp.test(reviewText.value)){
                return false;
            }
            else {
                return true;
            }
        }
    </script>
</body>