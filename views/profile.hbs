<body>
    <section id="sidebar" class="col-md-2 col-sm-12">
            <figure id="proPicFig">
                <img src="/{{proPicPath}}" id="proPic" alt="{{username}}'s Profile Photo">
                <figcaption>
                    <br>
                    {{fName}} {{lName}} (@{{username}})
                    <br>
                    Joined {{date_created}}
                </figcaption>
            </figure>
            <div id="icons">
                <div class="dropdown">
                    <a href="/edit/user"><img src="/img/png/settings.png" alt="Profile Settings" title="Change Settings"></a>
                </div>
                <div class="dropup">
                    <img src="/img/png/notifs.png" class="dropdown-toggle" data-toggle="dropdown" id="notifs" alt="Notifications" title="Your Notifications">
                    <ul class="dropdown-menu">
                        <span>&nbsp;You're all caught up</span>
                    </ul>
                </div>
            </div>
            
        </section>
        <div id="searchDiv" class="row col-md-10">
            <form action="/search" onsubmit="return validate();" method="get">
                <input type="search" name="query" placeholder="Search Nema" id="searchBox">
            </form>
        </div>
        <section id="contentSect" class="col-md-6 col-sm-12">
            <h5 class="success">{{success}}</h5>
            <section id="interested">
                <h3>News Feed</h3>
                <h4 id="noActiv">{{noActivity}}</h4>
                {{#each data}}
                <div class="post" id="post">
                    <h4><a href="/user/{{orgName}}">{{fullName}}</a></h4>
                    <article>
                        {{text}}
                    </article>
                    <h6>{{date}}, {{time}}</h6>
                    <div class="dropup">
                        <img title="Options" class="dropdown-toggle" data-toggle="dropdown" id="options" src="/img/png/ellipsis.png" alt="Options">
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li><a href="#">Review {{fullName}}</a></li>
                            <li><a href="#">Remove</a></li>
                            <li><a href="#">Not Interested</a></li>
                        </ul>
                    </div>
                </div>
                {{/each}}
            </section>
        </section>
        <section class="col-md-4">
            <h3>Reviews</h3>
            <h6 id="noRev">{{noReviews}}</h6>
            {{#each reviews}}
            <div id="review">
                <h5>{{organisation}}</h5>
                <h6>{{date}}&nbsp;{{time}}</h6>
                {{review}}
                <div class="dropup">
                    <img title="Options" class="dropdown-toggle" data-toggle="dropdown" id="options" src="/img/png/ellipsis.png" alt="Options">
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li><a href="/edit/reviews/{{uid}}">Edit</a></li>
                        <li><a onclick="return check();" href="/delete/reviews/{{uid}}">Delete</a></li>
                    </ul>
                </div>
            </div>
            {{/each}}
        </section>
