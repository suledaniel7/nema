    <script type="text/javascript">
        function validate(){
            var string = document.getElementById('searchBox').value;
            var whitespacePattern = /^\s*$/;

            if(whitespacePattern.test(string)){
                return false;
            }
            else {
                return true;
            }
        }
        function check(){
            if(confirm("Are you sure you want to delete?")){
                return true;
            }
            else {
                return false;
            }
        }
    </script>
