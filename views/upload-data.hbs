         <form role="form" enctype="multipart/form-data" class="form-vertical" action="data-upload" method="post">
                
                 <div class="panel panel-primary">
                  <div class="panel panel-heading" ><h3>Upload Data</h3></div>  
                    <h4>{{error}}</h4>
                    <div class= "panel-body">
                    <div class="form-group">
                        <label for="dataName">The name of the data file being uploaded</label>
                        <input type="text" name="dataName" required="required" placeholder="This name will be displayed on the statistics page" id="dataName">
                    </div>        
                    <div class="form-group">
                        <label for="file">Select an Excel File to upload</label>
                        <input type="file" required="required" name="spreadsheet" id="file">
                    </div>
                    <input type="submit" id="submit" value="Upload">
                    </div>

                </div>
        </form>
    
    <div class="container-fluid">
