</head>
<body>
    <div id="container-fluid" class="nav navbar-default">
        <header class="container-fluid">
            <figure>
                <a href="/"><img id="smallLogo" src="/img/logo-small.png" alt="Nema Logo"></a>
            </figure>
            <nav class="nav navbar-right">
                <ul class="nav navbar-nav col-md-12">
                    <li><a href="/signin">Sign in</a></li>
                    <li><a href="/signup">Sign up</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/contact">Contact Us</a></li>
                </ul>
            </nav>
        </header>
    </div>
    <hr>
    <div class="container-fluid">
        <section id="logoContainer">
            <img id="logo" title="Nema" src="/img/logo.jpg" alt="Nema Logo">
        </section>
        <br />
        <section id="searchCont">
            <form action="/search" onsubmit="return validate();" method="get">
                <input type="search"  name="query" placeholder="Search Nema" id="searchBox">
            </form>
        </section>
        <br />
    </div>
    <div class="container-fluid">
        <footer>
            Nema &copy; 2017
        </footer>
    </div>
    <script type="text/javascript">
        function validate(){
            var string = document.getElementById('searchBox').value;
            var whitespacePattern = /^\s*$/;

            if(whitespacePattern.test(string)){
                return false;
            }
            else {
                return true;
            }
        }
    </script>
</body>