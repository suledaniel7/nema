                            <option value="1960">1960</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-default" id="submit">Sign Up</button>
                </div>
            </div>
        </form>
        <br>
        <div id="org">
            <span><a href="/organisation">Create an Organisation Account</a></span>
        </div>
    </section>
    <footer>
        Nema &copy; 2017
    </footer>
    <script>
        function validate(){
            var username = document.getElementById('username').value,
                email = document.getElementById('email').value,
                password = document.getElementById('password').value,
                password1 = document.getElementById('password1').value;
            let whitespacePattern = /^\s*$/;
            if(whitespacePattern.test(username) || whitespacePattern.test(email) || whitespacePattern.test(password) || whitespacePattern.test(password1)){
                alert("All fields are required");
                return false;
            }
            else if(password !== password1){
                alert("Please ensure that your passwords match");
                return false;
            }
            else {
                return true;
            }
        }
    </script>
</body>