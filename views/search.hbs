<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Nema Search for {{query}}</title>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery-1.11.3.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/search.css">
</head>
<body>
    <div id="container-fluid" class="nav navbar-default">
        <header class="container-fluid">
            <figure>
                <a href="/"><img id="smallLogo" src="/img/logo-small.png" alt="Nema Logo"></a>
            </figure>
            <nav class="nav navbar-right">
                <ul class="nav navbar-nav col-md-12">
                    <li><a href="/">Home</a></li>
                    <li><a href="/signin">Sign in</a></li>
                    <li><a href="/signup">Sign up</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/contact">Contact Us</a></li>
                </ul>
            </nav>
        </header>
    </div>
    <section id="searchCont">
            <form action="/search" onsubmit="return validate();" method="get">
                <input type="search" value="{{query}}"  name="query" placeholder="Search Nema" id="searchBox">
            </form>
        </section>
    <hr>
    <section id="corrections">
        {{#each corrections}}
        Including search results for '{{corrected}}'.<br>
        {{/each}}
    </section>
    <section id="searchResults">
        {{#each organisations}}
        <a id="resLink" href="/user/{{username}}"><div id="result">
            <h4>{{name}}</h4>
            {{bio}}
        </div></a>
        {{/each}}
    </section>
    <section>
        <h5>{{noResults}}</h5>
    </section>
    <br />
    <footer>
        Nema &copy; 2017
    </footer>
    <script type="text/javascript">
        function validate(){
            var string = document.getElementById('searchBox').value;
            var whitespacePattern = /^\s*$/;

            if(whitespacePattern.test(string)){
                return false;
            }
            else {
                return true;
            }
        }
    </script>
</body>