<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Contact Nema</title>
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery-1.11.3.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/contact.css">
</head>
<body>
    <div id="container-fluid" class="nav navbar-default">
        <header class="container-fluid">
            <figure>
                <a href="/"><img id="smallLogo" src="/img/logo-small.png" alt="Nema Logo"></a>
            </figure>
            <nav class="nav navbar-right">
                <ul class="nav navbar-nav col-md-12">
                    <li><a href="/signin">Sign in</a></li>
                    <li><a href="/signup">Sign up</a></li>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/contact">Contact Us</a></li>
                </ul>
            </nav>
        </header>
    </div>
    <hr>
    <section>
        <form role="form" class="form-vertical" action="contact" onsubmit="return validate();" method="post">
            <div class="panel panel-primary">
                <div class="panel panel-heading">
                    <h3>Contact Form</h3>
                    <h4>{{error}}</h4>
                    <h5>{{message}}</h5>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="username">Enter your name:</label>
                        <input type="text" name="name" class="form-control" id="username">
                    </div>
                    <div class="form-group">
                        <label for="email">Enter your email address:</label>
                        <input type="email" name="email" class="form-control" id="email">
                    </div>
                    <div class="form-group">
                        <label for="password">Message:</label>
                        <textarea name="message" class="form-control" id="password" placeholder="Type your request"></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-default" id="submit">Send Query</button>
                </div>
             </div>
        </form>
    </section>
    <div class="container-fluid">
        <footer>
            Nema &copy; 2017
        </footer>
    </div>
</body>